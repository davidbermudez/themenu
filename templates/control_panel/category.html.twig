{% extends 'base.html.twig' %}

{% block title %}CPanel Business{% endblock %}

{% block body %}

    {% include 'control_panel/header.html.twig' %}
           
    <div class="container is-fluid">
        <div class="tile is-ancestor">
            <div class="tile is-4 is-vertical is-parent">
                <div class="tile is-child box has-background-link-light">
                    <p class="title">{% trans %}Cpanel.Sections{% endtrans %}</p>
                </div>                
            </div>
            <div class="tile is-parent">
                <div class="tile is-child box has-background-link-light">
                    {{ form_start(formCategory) }}
                        
                        {% set attr = {'class': 'input is-success'} %}
                        {% if menu.lang01 == false %}
                            {% set attr = attr|merge({'disabled': true}) %}
                        {% endif %}
                        <img src="{{asset('images/ico/es.png')}}" height="16" width="16">
                        <div class="field">
                            <label class="label">{% trans %}Cpanel.Category.Caption{% endtrans %}</label>
                            <div class="control has-icons-left">
                                {{ form_widget(formCategory.caption, {'attr': attr}) }}
                                <span class="icon is-small is-left">
                                    <i class="fas fa-list-ol"></i>
                                </span>
                            </div>
                        </div>
                        
                        <div class="field">
                            <label class="label">{% trans %}Cpanel.Category.Description{% endtrans %}</label>
                            <div class="control has-icons-left">
                                {{ form_widget(formCategory.description, {'attr': attr}) }}
                                <span class="icon is-small is-left">
                                    <i class="fas fa-paragraph"></i>
                                </span>
                            </div>
                        </div>
                        
                        {% set attr = {'class': 'input is-success'} %}
                        {% if is_granted('ROLE_PREMIUM') %}
                        {% else %}
                            {% set attr = attr|merge({'disabled': true}) %}
                            <a href="{{ path('app_index') }}"><span class="icon is-size-4 is-pulled-right"><ion-icon src="{{asset('images/ico/diamond-outline.svg')}}"></ion-icon></span></a>
                        {% endif %}
                        <img src="{{asset('images/ico/en.png')}}" height="16" width="16">
                        <div class="field">
                            <label class="label">{% trans %}Cpanel.Category.Caption{% endtrans %}</label>
                            <div class="control has-icons-left">
                                {{ form_widget(formCategory.caption_en, {'attr': attr}) }}
                                <span class="icon is-small is-left">
                                    <i class="fas fa-list-ol"></i>
                                </span>
                            </div>
                        </div>
                        
                        <div class="field">
                            <label class="label">{% trans %}Cpanel.Category.Description{% endtrans %}</label>
                            <div class="control has-icons-left">
                                {{ form_widget(formCategory.description_en, {'attr': attr}) }}
                                <span class="icon is-small is-left">
                                    <i class="fas fa-paragraph"></i>
                                </span>
                            </div>
                        </div>

                        {% set attr = {'class': 'input is-success'} %}
                        {% if is_granted('ROLE_PREMIUM') %}
                        {% else %}
                            {% set attr = attr|merge({'disabled': true}) %}
                            <a href="{{ path('app_index') }}"><span class="icon is-size-4 is-pulled-right"><ion-icon src="{{asset('images/ico/diamond-outline.svg')}}"></ion-icon></span></a>
                        {% endif %}
                        <img src="{{asset('images/ico/ca.png')}}" height="16" width="16">
                        <div class="field">
                            <label class="label">{% trans %}Cpanel.Category.Caption{% endtrans %}</label>
                            <div class="control has-icons-left">
                                {{ form_widget(formCategory.caption_ca, {'attr': attr}) }}
                                <span class="icon is-small is-left">
                                    <i class="fas fa-list-ol"></i>
                                </span>
                            </div>
                        </div>
                        
                        <div class="field">
                            <label class="label">{% trans %}Cpanel.Category.Description{% endtrans %}</label>
                            <div class="control has-icons-left">
                                {{ form_widget(formCategory.description_ca, {'attr': attr}) }}
                                <span class="icon is-small is-left">
                                    <i class="fas fa-paragraph"></i>
                                </span>
                            </div>
                        </div>
                        <!--Submit button-->
                        <div class="field is-grouped mt-2">
                            <div class="control">
                                <button id="submitButton" class="button is-link">{{ button }}</button>
                            </div>
                        </div>
                    {{ form_end(formCategory) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
